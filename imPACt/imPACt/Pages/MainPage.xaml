<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
             x:Class="imPACt.Pages.MainPage"
             Padding="0,40"
             BackgroundColor="#00CFB3">
    <ContentPage.Content>
    <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
    <!-- Introduction to imPACt app with description of what is it -->
        <AbsoluteLayout>  
        <BoxView BackgroundColor="White"
                 HorizontalOptions="CenterAndExpand"
                 CornerRadius="10"
                 WidthRequest="360" HeightRequest="480"
                 AbsoluteLayout.LayoutBounds="0.5,0,1,0.7" AbsoluteLayout.LayoutFlags="All"
        />
        <!-- Features text -->
        <Label x:Name="Introduction_Note" Text="Find researchers in the SEC-LSAMP region to connect with by swiping left or right. Select their image to learn more!"
               TextColor="#00858F" FontSize="16"
               HorizontalTextAlignment="Center"
               Margin="50,0,50,0"
               AbsoluteLayout.LayoutBounds="0.5,0.5" AbsoluteLayout.LayoutFlags="PositionProportional">
        </Label>

        <!-- imPACt Title Logo -->
        <Image Source="imPACt_Title1.png"
               WidthRequest="180"
               AbsoluteLayout.LayoutBounds="0.5,0.05" AbsoluteLayout.LayoutFlags="PositionProportional">
        </Image>

        <!-- Current Note Icon -->
        <Image x:Name="NoteIcon" Source="LS_PAC_MODELS_Icon1.png"
               WidthRequest="180"
               AbsoluteLayout.LayoutBounds="0.5,0.22" AbsoluteLayout.LayoutFlags="PositionProportional">
        </Image>

        <!-- Center-align the 3, small notes-->
        <StackLayout Orientation="Horizontal" Spacing="10"
                     HorizontalOptions="Center" VerticalOptions="Start"
                     AbsoluteLayout.LayoutBounds="0.5,0.63" AbsoluteLayout.LayoutFlags="PositionProportional">
            <BoxView x:Name="First_Note" BackgroundColor="#00858F"
                     HorizontalOptions="Center" VerticalOptions="Center"
                     WidthRequest="10" HeightRequest="10"
                     CornerRadius="5">
            </BoxView>
            <BoxView x:Name="Second_Note" BackgroundColor="#FFE780"
                     HorizontalOptions="Center" VerticalOptions="Center"
                     WidthRequest="10" HeightRequest="10"
                     CornerRadius="5">
            </BoxView>
            <BoxView x:Name="Third_Note" BackgroundColor="#FFE780"
                     HorizontalOptions="Center" VerticalOptions="Center"
                     WidthRequest="10" HeightRequest="10"
                     CornerRadius="5">
            </BoxView>
        </StackLayout>

        <!-- Center-align the Skip & Next buttons -->
        <StackLayout Orientation="Horizontal" Spacing="20"
                     HorizontalOptions="Center" VerticalOptions="Start"
                     AbsoluteLayout.LayoutBounds="0.5,0.8" AbsoluteLayout.LayoutFlags="PositionProportional">
            
            
            <!-- Skip Button -->
            <Button x:Name="SkipButton" Pressed="HighlightButton" Released="SkipToLogin"
                    Text="Skip"
                    Style="{StaticResource ChoiceButton}"
                    >
            </Button>
            
            <!-- Next Button -->
            <Button x:Name="NextButton" Pressed="HighlightButton" Released="NextNote"
                    Text="Next"
                    Style="{StaticResource ChoiceButton}">
            </Button>
        </StackLayout>
    </AbsoluteLayout>
    </ScrollView>
    </ContentPage.Content>
</ContentPage>
